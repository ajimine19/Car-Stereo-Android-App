<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.boylan19.myapplication.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="648dp"
        android:layout_weight="2">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@android:color/darker_gray">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".5">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <Button
                        android:text="1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/One"
                        android:layout_weight="1"
                        android:textStyle="normal|bold"
                        android:textSize="50sp"
                        android:textColor="@android:color/holo_green_light" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <Button
                        android:text="2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/Two"
                        android:layout_weight="1"
                        android:textSize="50sp"
                        android:textStyle="normal|bold"
                        android:textColor="@android:color/holo_green_light" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <Button
                        android:text="3"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/Three"
                        android:layout_weight="1"
                        android:textSize="50sp"
                        android:textStyle="normal|bold"
                        android:textColor="@android:color/holo_green_light" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_width="0dp">

                    <Button
                        android:text="4"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/Four"
                        android:layout_weight="1"
                        android:textSize="50sp"
                        android:textStyle="normal|bold"
                        android:textColor="@android:color/holo_green_light" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_width="0dp">

                    <Button
                        android:text="5"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/Five"
                        android:layout_weight="1"
                        android:textStyle="normal|bold"
                        android:textSize="50sp"
                        android:textColor="@android:color/holo_green_light" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <Button
                        android:text="6"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/Six"
                        android:layout_weight="1"
                        android:textColor="@android:color/holo_green_light"
                        android:textSize="50sp"
                        android:textStyle="normal|bold" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".5">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".33">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextClock
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:id="@+id/Clock"
                            android:textSize="30sp"
                            android:background="?attr/colorButtonNormal"
                            android:gravity="center" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.96"
                        android:weightSum="1">

                        <Switch
                            android:text="  AM | FM"
                            android:layout_width="match_parent"
                            android:layout_height="49dp"
                            android:id="@+id/AMFM"
                            android:backgroundTint="@android:color/holo_green_light"
                            android:background="@android:color/holo_green_light"
                            android:textStyle="normal|bold"
                            android:textSize="18sp" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".33">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">

                        <TextView
                            android:text="530.0 kHz"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/radioDisplay"
                            android:textAlignment="center"
                            android:background="@android:color/background_dark"
                            android:textColor="@android:color/holo_green_light"
                            android:textSize="36sp"
                            android:textStyle="normal|bold"
                            android:gravity="center" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">

                        <Button
                            android:text="CD Music"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/button2"
                            android:background="?attr/colorButtonNormal" />

                        <Button
                            android:text="Stop All Music"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/button"
                            android:onClick="stopMusic"
                            android:background="@android:color/holo_green_light" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight=".33">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:weightSum="1">

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1">

                            <ImageButton
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                app:srcCompat="@android:drawable/arrow_up_float"
                                android:id="@+id/UpStation"
                                android:background="@android:color/holo_green_light" />
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1">

                            <ImageButton
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                app:srcCompat="@android:drawable/arrow_down_float"
                                android:id="@+id/DownStation"
                                android:background="@android:color/holo_green_light" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"></LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@android:color/black">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <TextView
                        android:text="Volume"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/textView2"
                        android:textSize="30sp"
                        android:textColor="@android:color/holo_green_light"
                        android:textAlignment="center"
                        android:textColorHighlight="@android:color/background_light"
                        android:gravity="center_vertical"
                        android:textStyle="normal|bold" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <SeekBar
                        android:layout_width="match_parent"
                        android:layout_height="62dp"
                        android:id="@+id/Volume"
                        android:background="@android:color/holo_green_light"
                        android:translationY="20dp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <RatingBar
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/Rater"
                        android:clickable="false"
                        android:background="?attr/colorButtonNormal"
                        android:translationY="20dp" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <ImageButton
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:srcCompat="@android:drawable/ic_media_rew"
                            android:id="@+id/imageButton10"
                            android:layout_weight="1" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            app:srcCompat="@android:drawable/ic_media_pause"
                            android:id="@+id/imageButton7"
                            android:layout_weight="1" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <ImageButton
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:srcCompat="@android:drawable/ic_media_play"
                            android:id="@+id/imageButton8"
                            android:layout_weight="1" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <ImageButton
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:srcCompat="@android:drawable/ic_media_ff"
                            android:id="@+id/imageButton9"
                            android:layout_weight="1" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <ToggleButton
                        android:text="PowerButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/PowerButton"
                        android:background="@android:color/holo_green_light" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="277dp"
                android:layout_weight="1.00">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.75"
                    android:weightSum="1">

                    <TextView
                        android:text="Power Light"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/textView4"
                        android:textColor="@android:color/holo_green_light"
                        android:textStyle="bold"
                        android:textSize="30sp"
                        android:gravity="center"
                        android:layout_weight="1.25" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.33">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:srcCompat="@android:drawable/button_onoff_indicator_on"
                        android:id="@+id/PowerLight"
                        android:layout_weight="1"
                        android:visibility="visible" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
